<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="model.quiz.glarimy.com.ecommerceapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/hand_graving"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="ecommerceapp.Activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ecommerceapp.Activities.YourAccount" />
        <activity android:name="ecommerceapp.Activities.YourCart" />
        <activity android:name="ecommerceapp.Activities.YourOrders" />
        <activity android:name="ecommerceapp.Activities.SingleProduct" />
        <activity android:name="ecommerceapp.Activities.UserLogin" />
        <activity android:name="ecommerceapp.Activities.UserRegisteration" />
        <activity android:name="ecommerceapp.Activities.NoLogin" />
        <activity android:name="ecommerceapp.Activities.NoItems" />
    </application>

</manifest>